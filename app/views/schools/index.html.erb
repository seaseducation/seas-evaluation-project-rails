<h1>School List</h1>

<p id="notice"><%= notice %></p>

<%= link_to 'New School', new_school_path, class: 'btn btn-primary' %>

<table class="table schools">
  <thead>
    <tr>
      <th>Title</th>
      <th>City</th>
      <th>State</th>
      <th>Students</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr data-id="<%= school.id %>">
        <td><%= school.title %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.students.count %></td>
        <td>
          <span class="pull-right">
            <%= link_to 'Show', school, class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Edit', edit_school_path(school), class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
