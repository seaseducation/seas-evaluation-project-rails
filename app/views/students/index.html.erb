<h1>Student List</h1>

<p id="notice"><%= notice %></p>

<%= link_to 'New Student', new_student_path, class: 'btn btn-primary' %>

<table class="table students">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Grade</th>
      <th>Program</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr data-id="<%= student.id %>">
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.grade.title %></td>
        <td><%= student.program&.title %></td>
        <td>
          <span class="pull-right">
            <%= link_to 'Show', student, class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Destroy', student, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
